            function toggleMenu(id) {
                $('.mit').removeClass('mactiv');
                $('.sub_sub').addClass('snv');
                $('#' + id).removeClass('snv');
                if ($('#' + id).hasClass('snv')) {
                    $('#it_' + id).removeClass('mactiv');
                } else {
                    $('#it_' + id).addClass('mactiv');
                }
            }
        </script>

